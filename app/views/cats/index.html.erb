<div class="col-md-12">
  <h1 class="welcome-title col-md-offset-3 col-md-6">Welcome to Cat Cafe!</h1>
</div>

<div class="col-md-12">
<% if flash.any? %>
  <% flash.each do |key, message| %>
    <div class="alert alert-<%= key %>"><%= message %></div>
  <% end %>
<% end %>
</div>
<div class="cats col-md-12">
<% @cats.each do |c| %>
      <div class="cat col-md-3">
        <div class="small-circle">
          <a href="/cats/<%= c.id %>"><img src="<%= c.img.gsub("_b", "_m") %>"></a>
        </div>
        <h2><%= c.name %></h2>
      </div>
<% end %>
</div>
